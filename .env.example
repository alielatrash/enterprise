# Timezone
TZ=Africa/Cairo

# Database
DATABASE_URL=sqlite:///./mena_digest.db

# Gmail API (for Enterprise newsletters)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GMAIL_LABEL=Enterprise-Forward
GMAIL_CREDENTIALS_PATH=credentials.json
GMAIL_TOKEN_PATH=token.json

# Reuters API (optional - will fallback to RSS if not provided)
REUTERS_API_KEY=

# LLM for summarization (choose one)
ANTHROPIC_API_KEY=your-anthropic-key
OPENAI_API_KEY=your-openai-key

# Email delivery
SENDGRID_API_KEY=your-sendgrid-key
# SMTP Fallback
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com
DIGEST_EMAIL_TO=recipient@example.com

# Optional: WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_WHATSAPP_TO=whatsapp:+1234567890

# Optional: Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Scheduler
DIGEST_SCHEDULE_HOUR=8
DIGEST_SCHEDULE_MINUTE=30

# App settings
APP_HOST=0.0.0.0
APP_PORT=8000
